      "url": "/?action=add-habit",
      "icons": [
        {
          "src": "icons/shortcut-add.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Today's Progress",
      "short_name": "Progress",
      "description": "View today's habit progress",
      "url": "/?view=dashboard",
      "icons": [
        {
          "src": "icons/shortcut-progress.png",
          "sizes": "96x96"
        }
      ]
